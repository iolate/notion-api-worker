{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "es6",
    "target": "esnext",
    "lib": ["esnext", "DOM", "DOM.Iterable", "WebWorker"],
    "alwaysStrict": true,
    "strict": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true
  },
  "include": [
    "./src/*.ts",
    "./src/**/*.ts"
  ],
  "exclude": ["node_modules/", "dist/"]
}
